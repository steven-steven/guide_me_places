<turbo-stream action="replace" target="place_details">
  <template>
    <div id="place_details" class="flex w-full">
      <div id="street_view" class="w-full h-full border-dashed border-2 rounded-lg">
        <iframe id="street_view_iframe" src="<%= @iframe1 %>" width="100%" height="100%" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
      </div>
      <div class="flex flex-col justify-evenly rounded-lg text-sm border m-1 bg-gray-100 p-2">
        <a href="<%= place_details_path %>" data-turbo-stream class="inline-flex items-center p-2 rounded-lg hover:text-gray-900 hover:bg-gray-200">
          <%= heroicon "building-library", variant: :outline, options: { class: "shrink-0 h-5 w-5 text-slate-700" } %>
        </a>
        <a class="inline-flex items-center p-2 rounded-lg bg-gray-300 active">
          <%= heroicon "globe-asia-australia", variant: :outline, options: { class: "shrink-0 h-5 w-5 text-slate-700" } %>
        </a>
      </div>
    </div>
  </template>
</turbo-stream>
