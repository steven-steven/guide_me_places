<%# locals: (active_index: 0) -%>

<% inactive_class = "inline-flex items-center p-2 rounded-lg hover:text-gray-900 hover:bg-gray-200" %>
<% active_class = "inline-flex items-center p-2 rounded-lg bg-gray-300" %>

<div class="flex flex-col justify-evenly rounded-lg text-sm border m-1 bg-gray-100 p-2">
  <%= link_to(place_details_path(id: @place.id), data: {turbo_stream: active_index != 0 }, class: active_index == 0 ? active_class : inactive_class) do %>
    <%= heroicon "building-library", variant: :outline, options: { class: "shrink-0 h-5 w-5 text-slate-700" } %>
  <% end %>
  <%= link_to(world_view_path(id: @place.id), data: {turbo_stream: active_index != 1 }, class: active_index == 1 ? active_class : inactive_class) do %>
    <%= heroicon "globe-asia-australia", variant: :outline, options: { class: "shrink-0 h-5 w-5 text-slate-700" } %>
  <% end %>
</div>