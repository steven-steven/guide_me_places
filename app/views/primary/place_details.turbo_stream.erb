<turbo-stream action="replace" target="place_details">
  <template>
    <div id="place_details" class="flex">
      <div class="w-full overflow-y-scroll p-5">
        <div class="mb-3">
          <span class="bg-yellow-100 p-2 text-xs md:text-lg">üìç Your Stop: <span class="font-bold"><%= @location %></span></span>
        </div>
        <div class="flex flex-col gap-3 divide-y divide-slate-700">
          <% @articles.each do |article| %>
            <%= link_to(article[:url], target: "_blank") do %>
              <div class="flex gap-3 mt-3 hover:border-2 hover:border-dashed">
                <%= image_tag(article[:image], alt: article[:title], class:"w-3/12 object-cover") %>
                <div>
                  <p class="font-semibold text-xs md:text-lg">
                    <%= article[:title] %>
                    <%= image_tag(article[:favicon], class:"w-5 inline mx-2") %>
                  </p>
                  <p class="text-xs"><%= article[:short_description] %></p>
                </div>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="flex flex-col justify-evenly rounded-lg text-sm border m-1 bg-gray-100 p-2">
        <a class="inline-flex items-center p-2 rounded-lg bg-gray-300 active">
          <%= heroicon "building-library", variant: :outline, options: { class: "shrink-0 h-5 w-5 text-slate-700" } %>
        </a>
        <a href="<%= world_view_path %>" data-turbo-stream class="inline-flex items-center p-2 rounded-lg hover:text-gray-900 hover:bg-gray-200">
          <%= heroicon "globe-asia-australia", variant: :outline, options: { class: "shrink-0 h-5 w-5 text-slate-700" } %>
        </a>
      </div>
    </div>
  </template>
</turbo-stream>
